---
import AuthorCard from "@/components/cards/authorCard.astro";
import HeaderSection from "./headerSection.astro";
import { authorsHandler } from "@/lib/handlers/authors";

const authors = authorsHandler.limitAurhors(6);
---

<section class="container py-16" data-pagefind-ignore="all">
  <HeaderSection
    title="Tim Analis Kami"
    link_title="Lihat Semua"
    link_url="/authors"
  />
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <p class="text-gray-600 text-center mb-8 max-w-2xl mx-auto">
      Tim analis berpengalaman kami menyediakan wawasan mendalam tentang pasar
      saham Indonesia dengan analisis fundamental dan teknikal yang akurat.
    </p>
    <ul
      role="list"
      class="grid grid-cols-2 gap-x-6 gap-y-8 sm:grid-cols-3 lg:grid-cols-6 sm:gap-y-12"
    >
      {authors.map((author) => <AuthorCard author={author} />)}
    </ul>
  </div>
</section>
