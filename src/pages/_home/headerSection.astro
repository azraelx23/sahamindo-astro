---
import ArrowRight02 from "@/assets/svgs/arrow-right-02.astro";

type Props = {
  title: string;
  link_title: string;
  link_url: string;
};

const { title, link_title, link_url } = Astro.props;
---

<div class="flex items-center justify-between mb-6" data-pagefind-ignore="all">
  <h2 class="text-2xl font-bold text-blue-900 border-l-4 border-blue-600 pl-4">
    {title}
  </h2>
  <a
    href={link_url}
    class="btn-financial-outline flex items-center gap-2 text-sm font-medium group hover:shadow-sm transition-all"
  >
    <span>{link_title}</span>
    <span class="group-hover:translate-x-0.5 transition-transform">
      <ArrowRight02 />
    </span>
  </a>
</div>
