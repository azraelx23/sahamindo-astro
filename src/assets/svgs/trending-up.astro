---
import type { Icon } from "@/lib/types";

type Props = Icon;

const {
  width = "20",
  height = "20",
  color = "currentColor",
  strokeWidth = "1.5",
  size,
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  width={size ? size : width}
  height={size ? size : height}
  color={color}
  fill="none"
>
  <path
    d="M2.5 12.5L7.5 7.5L12.5 12.5L21.5 3.5"
    stroke="currentColor"
    stroke-width={strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"></path>
  <path
    d="M16.5 3.5H21.5V8.5"
    stroke="currentColor"
    stroke-width={strokeWidth}
    stroke-linecap="round"
    stroke-linejoin="round"></path>
</svg>
